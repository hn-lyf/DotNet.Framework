{
  "ReRoutes": [
    {
      //下游模版
      "DownstreamPathTemplate": "/api/{everything}",
      //下游请求方式,http,https
      "DownstreamScheme": "http",
      //下游地址可多个,多个负载均衡
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5030
        }
        //,{
        //  "Host": "localhost",
        //  "Port": 5006
        //}
      ],
      //上游请求模版
      "UpstreamPathTemplate": "/news/{everything}",
      //上游请求方法
      "UpstreamHttpMethod": [ "Get", "Post" ],
      //负载均衡的设置
      "LoadBalancerOptions": {
        //LeastConnection将请求发往最空闲的那个服务器
        //RoundRobin轮流发送
        //NoLoadBalance"总是发往第一个请求或者是服务发现"
        "Type": "LeastConnection"
      },
      //请求缓存
      //"FileCacheOptions": {
      //  //缓存10秒，10秒后过期
      //  "TtlSeconds": 10,
      //  "Region": "somename"
      //},
      //限流
      "RateLimitOptions": {
        //一个包含客户端白名单列表的数组。这意味着在白名单里的客户端不受流量限制的影响
        "ClientWhitelist": ["admin"],
        // 是否启用限流
        "EnableRateLimiting": true,
        // 统计时间段：1s, 5m, 1h, 1d
        "Period": "1m",
        // 该值指定我们可以在一定的秒数后重试。
        "PeriodTimespan": 15,
        // 该值指定一个客户端可以在定义的时间段(Period)内允许的最大请求数。
        "Limit": 999999999999999
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    }
  ]
}
